</head>
<body>
    
    <div class="profile-container">
        <div class="wrapper">
    
            <div class="order-details">
                <!-- Delivery Address Section -->
                <div class="section">
                    <div class="section-header">
                      <span class="section-number">1</span>
                      <span class="section-title">Delivery Address</span>
                    </div>
                    <div class="section-content">
                      <div class="address-container">
                        <h2 class="title">EDIT ADDRESS</h2>
                        <form action="/checkoutAddress/<%= address._id %>" method="POST" class="address-form">
                            <input type="hidden" name="productId" value="<%= product ? product._id : '' %>">
                          <div class="form-row">
                            <input type="text" name="name" value="<%= address ? address.name : '' %>" placeholder="Name">
                            <input type="text" name="mobile" value="<%= address ? address.mobileNumber : '' %>" placeholder="10 digit mobile number">
                          </div>
                          <div class="form-row">
                            <input type="text" name="pincode" value="<%= address ? address.pincode : '' %>" placeholder="Pincode">
                            <input type="text" name="locality" value="<%= address ? address.locality : '' %>" placeholder="Locality">
                          </div>
                          <div class="form-row">
                            <textarea name="address" rows="3" placeholder="Address (Area and Street)"><%= address ? address.address : '' %></textarea>
                          </div>
                          <div class="form-row">
                            <input type="text" name="city" value="<%= address ? address.district : '' %>" placeholder="City / District / Town">
                            <input type="text" name="state" value="<%= address ? address.state : '' %>" placeholder="State">
                          </div>
                          <div class="form-row">
                            <input type="text" name="landmark" value="<%= address ? address.landmark : '' %>" placeholder="Landmark (Optional)">
                            <input type="text" name="alternate_phone" value="<%= address ? address.alternateMobile : '' %>" placeholder="Alternate Phone (Optional)">
                          </div>
                          <div class="form-row buttons">
                            <button type="button" class="cancel-button" id="cancelBtn">CANCEL</button>
                            <button type="submit" class="save-button">Save</button>
                          </div>
                        </form>
                      </div>
                    </div>
                </div>
            </div>

            <!-- Price Details Section -->
            <div class="price-details">
                <h4>Price Details</h4>
                <div class="price-row">
                    <span>Price</span>
                    <span>_____</span>
                </div>
                <div class="price-row">
                    <span>Delivery Charge</span>
                    <span class="free-text">_____</span>
                </div>
                <div class="price-row">
                    <span>Amount Payable</span>
                    <span>_____</span>
                </div>
            </div>

        </div>
    </div>

    <script>

        document.getElementById('cancelBtn').addEventListener('click', function() {
          window.location.href = '/checkout';
        });
        
    </script>

