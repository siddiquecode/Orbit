        .quantity-selector button:active {
            background-color: #f0f0f0;
        }

        .payment-option {
            margin-bottom: 15px;
        }

        .payment-option label {
            display: block;
            cursor: pointer;
        }

        .payment-option input {
            margin-right: 10px;
        }

        .payment-option span {
            font-size: 12px;
            color: #666;
        }

        .continue-button {
            width: 30%;
            margin-left: 70%;
            padding: 15px;
            background-color: #6b46c1;
            color: white;
            font-weight: bold;
            border: none;
            cursor: pointer;
            margin-top: 20px;
            border-radius: 4px;
            transition: background-color 0.3s;
        }

        .continue-button:hover {
            background-color: #804ff1;
        }

