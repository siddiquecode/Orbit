<body>
    
    <div class="profile-container">
        <div class="wrapper">
    
            <div class="order-details">
                <div class="section">
                    <div class="section-content">
                        <h1 class="page-title">Manage Addresses</h1>
                      <div class="address-container">
                        <h2 class="title">ADD ADDRESS</h2>
                        <form action="/AddCheckoutAddress" method="POST" class="address-form">
                            <div class="form-row">
                                <input type="text" name="name" placeholder="Name">
                                <input type="text" name="mobile" placeholder="10 digit mobile number" >
                            </div>
                            <div class="form-row">
                                <input type="text" name="pincode" placeholder="Pincode">
                                <input type="text" name="locality" placeholder="Locality">
                            </div>
                            <div class="form-row">
                                <textarea name="address" rows="3" placeholder="Address (Area and Street)" ></textarea>
                            </div>
                            <div class="form-row">
                                <input type="text" name="district" placeholder="City / District / Town">
                                <input type="text" name="state" placeholder="State">
                            </div>
                            <div class="form-row">
                                <input type="text" name="landmark" placeholder="Landmark (Optional)">
                                <input type="text" name="alternate_phone" placeholder="Alternate Phone (Optional)">
                            </div>
                            <div class="form-group address-type">
                                <label>Address Type</label>
                                <div class="radio-group">
                                  <label><input type="radio" name="addressType" value="home"/> Home</label>
                                  <label><input type="radio" name="addressType" value="work"/> Work</label>
                                </div>
                              </div>
                            <div class="form-row buttons">
                                <a href="/checkout"><button type="button" class="cancel-button">CANCEL</button></a>
                                <button type="submit" class="save-button">Save</button>
                            </div>
                        </form>

                      </div>
                    </div>
                </div>
            </div>

            <!-- Price Details Section -->
            <div class="price-details">
                <h4>Price Details</h4>
                <div class="price-row">
                    <span>Price</span>
                    <span>_____</span>
                </div>
                <div class="price-row">
                    <span>Delivery Charge</span>
                    <span class="free-text">_____</span>
                </div>
                <div class="price-row">
                    <span>Amount Payable</span>
                    <span>_____</span>
                </div>
            </div>

        </div>
    </div>


