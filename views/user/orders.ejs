    
    <%- include('../partials/header') %>
    
    <style>
        
        .main-container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 1.5rem;
        }

        .wrapper {
            display: flex;
        }

        .o_sidebar {
            margin-left: -80px;
            width: 280px;
            padding: 1rem;
            background-color: #ffffff;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.3);
            height: 100vh;
        }

        .profile {
            text-align: center;
            margin-bottom: 1.5rem;
        }

        .profile-img {
            background-color: #e2e2e2;
            overflow: hidden;
            border-radius: 50%;
            width: 100px;
            height: 100px;
            margin: 0 auto;
            margin-bottom: 0.5rem;
            border: 1px solid rgba(0, 0, 0, 0.075);
        }

        .profile-name {
            font-size: 1.125rem;
            font-weight: 600;
        }

        .highlight {
            color: #db710e;
        }

        .nav-links {
            padding-top: 0.625rem;
        }

        .nav-link {
            display: flex;
            align-items: center;
            font-size: 1.125rem;
            color: #000000;
            text-decoration: none;
            border-bottom: 1px solid rgba(0, 0, 0, 0.192);
            padding: 0.625rem;
            width: 200px;
        }

        .nav-link i {
            padding-right: 10px;
            padding-bottom: 2px;
        }

        .nav-link:hover {
            color: blue;
        }

        .nav-link.active {
            color: white;
            background-color: #000000;
            border-radius: 5px;
        }

        .order-container {
            width: 100%;
            padding: 2rem;
            background-color: #ffffff;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.3);
            margin-left: 1rem;
        }

        h1 {
            font-size: 1.5rem;
            font-weight: 700;
        }

        .order-card {
            border: 1px solid #ccc;
            border-radius: 8px;
            margin-bottom: 20px;
            padding: 20px;
            background-color: #fafafa;
        }

        .order-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 15px;
        }

        .order-header h2 {
            margin: 0;
            font-size: 20px;
            color: #333;
        }

        .order-header p {
            margin: 0;
            font-size: 14px;
            color: #777;
        }

        .order-body {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .order-item {
            display: flex;
            align-items: center;
        }

        .order-item img {
            width: 100px;
            height: 100px;
            border-radius: 8px;
            margin-right: 15px;
        }

        .item-details {
            color: #333;
        }

        .item-name {
            font-size: 16px;
            font-weight: 600;
            margin-bottom: 5px;
        }

        .item-quantity,
        .item-price {
            font-size: 14px;
            color: #555;
        }

        .order-info {
            text-align: right;
        }

        .order-info p {
            margin: 5px 0;
            font-size: 14px;
            color: #555;
        }

        .return-btn,
        .cancel-return-btn {
            padding: 10px 20px;
            border: none;
            border-radius: 8px;
            cursor: pointer;
            font-size: 14px;
            font-weight: 600;
            margin-top: 10px;
            display: inline-block;
        }

        .return-btn {
            background-color: #4CAF50;
            color: #fff;
        }

        .cancel-return-btn {
            background-color: #FF6347;
            color: #fff;
        }

        .empty_order img{
            width: 60%;
            transform: translateY(-30px);
            margin-left: 185px;
        }

        .empty_order p{
            font-size: 20px;
            color: rgba(100, 89, 69, 0.829);
            margin-left: 360px;
            font-weight: 800;
            transform: translateY(-80px);
        }

        .order-pagination{
            display: flex;
            height: 50px;
            align-items: center;
            gap: 10px;
        }

    </style>

    <div class="main-container">
        <div class="wrapper">
            <div class="o_sidebar">
                <div class="profile">
                    <div class="profile-img"><img src="/images/dp.jpg" alt=""></div>
                    <p class="profile-name">Hello, <span class="highlight"><%= user.firstname %></span></p>
                </div>
                <div class="nav-links">
                    <a href="/userprofile" class="nav-link">
                        <i class="fa-solid fa-user"></i>
                        <span>My Profile</span>
                    </a>
                    <a href="/userorders" class="nav-link active">
                        <i class="fas fa-shopping-bag"></i>
                        <span>My Orders</span>
                    </a>
                    <a href="/useraddress" class="nav-link">
                        <i class="fas fa-map-marker-alt"></i>
                        <span>My Address</span>
                    </a>
                    <a href="/userwishlist" class="nav-link">
                        <i class="fa-solid fa-heart"></i>
                        <span>Wish List</span>
                    </a>
                    <a href="/userwallet" class="nav-link">
                        <i class="fas fa-wallet"></i>
                        <span>Wallet</span>
                    </a>
                    <a href="/usercoupon" class="nav-link">
                        <i class="fa-solid fa-ticket"></i>
                        <span>Coupon</span>
                    </a>
                    <a href="/userlogout" class="nav-link">
                        <i class="fas fa-power-off"></i>
                        <span>Logout</span>
                    </a>
                </div>
            </div>

            <div class="order-container">
                <h1>My Orders</h1>
                <% if (errorMessage) { %>
                    <p style="color: red; font-weight: 600;"><%= errorMessage %></p>
                <% } %>
              
                <% if (orders && orders.length > 0) { %>
                    <% orders.forEach(order => { %>
                      <div class="order-card">
                        <div class="order-header">
                          <h2>Order Placed</h2>
                        </div>
                        <div class="order-body">
                          <% if (order.items && order.items.length > 0) { %>
                            <% const firstItem = order.items[0]; %>
                            <div class="order-item">
                              <% if (firstItem.productId && firstItem.productId.productImage && firstItem.productId.productImage.length > 0) { %>
                                <img src="<%= firstItem.productId.productImage[0] %>" alt="<%= firstItem.productId.productName %>" class="order-item-image">
                              <% } else { %>
                                <img src="/path/to/default-image.jpg" alt="No Image Available">
                              <% } %>
                              <div class="item-details">
                                <p class="item-name"><%= firstItem.productId.productName %></p>
                                <p class="item-quantity">Quantity: <%= firstItem.quantity %></p>
                                <p class="item-discounted-price">Order Price: ₹<%= firstItem.discountedPrice.toFixed(2) %></p>
                              </div>
                            </div>
                            <% if (order.items.length > 1) { %>
                              <p style="transform: translate(-100px, 70px);">Total <%= order.items.length %> items purchased</p>
                            <% } %>
                          <% } %>
                          <div class="order-info">
                            <p><strong>Date Placed:</strong> <%= new Date(order.orderedDate).toDateString() %></p>
                            <p><strong>Total Amount:</strong> ₹<%= order.totalAmount.toFixed(2) %></p>
                            <p><strong>Payment Method:</strong> <%= order.paymentMethod %></p>
                            <a href="/orderDetails/<%= order._id %>">View Details</a>
                          </div>
                        </div>
                      </div>
                    <% }); %>
                  
                  <div class="order-pagination">
                    <!-- Previous Arrow -->
                    <% if (currentPage > 1) { %>
                    <a href="/userorders?page=<%= currentPage - 1 %>" class="arrow-btn">
                      <i class="fa-solid fa-arrow-left"></i>
                    </a>
                    <% } else { %>
                    <span class="arrow-btn disabled">
                      <i class="fa-solid fa-arrow-left"></i>
                    </span>
                    <% } %>
            
                    <!-- Next Arrow -->
                    <% if (currentPage < totalPages) { %>
                    <a href="/userorders?page=<%= currentPage + 1 %>" class="arrow-btn">
                      <i class="fa-solid fa-arrow-right"></i>
                    </a>
                    <% } else { %>
                    <span class="arrow-btn disabled">
                      <i class="fa-solid fa-arrow-right"></i>
                    </span>
                    <% } %>
                  </div>
              
                <% } else { %>
                  <div class="empty_order">
                    <img src="/images/emptyOrder.png" alt="">
                    <p>No orders found.</p>
                  </div>
                <% } %>
            </div>
              
        </div>
    </div>

    
    <%- include('../partials/footer') %>
