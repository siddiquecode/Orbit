    
    <%- include('../partials/header') %>

    <style>
        
        .profile-container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 1.5rem;
        }

        .wrapper {
            display: flex;
        }

        .p_sidebar {
            margin-left: -80px;
            width: 280px;
            padding: 1rem;
            background-color: #ffffff;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.3);
        }

        .profile {
            text-align: center;
            margin-bottom: 1.5rem;
        }

        .profile-img {
            background-color: #e2e2e2;
            overflow: hidden;
            border-radius: 50%;
            width: 100px;
            height: 100px;
            margin: 0 auto;
            margin-bottom: 0.5rem;
            border: 1px solid rgba(0, 0, 0, 0.075);
        }

        .profile-name {
            font-size: 1.125rem;
            font-weight: 600;
        }

        .highlight {
            color: #db710e;
        }

        .nav-links {
            padding-top: 0.625rem;
        }

        .nav-link {
            display: flex;
            align-items: center;
            font-size: 1.125rem;
            color: #000000;
            text-decoration: none;
            border-bottom: 1px solid rgba(0, 0, 0, 0.192);
            padding: 0.625rem;
            width: 200px;
        }

        .nav-link i{
            padding-right: 10px;
            padding-bottom: 2px;
        }

        .nav-link:hover {
            color: blue;
        }

        .nav-link.active {
            color: white;
            background-color: #000000;
            border-radius: 5px;
        }

        .main-content {
            width: 100%;
            padding: 2rem;
            background-color: #ffffff;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.3);
            margin-left: 1rem;
        }

        .page-title {
            font-size: 1.5rem;
            font-weight: 700;
        }

        .profile-form {
            width: 700px;
            margin-left: 50px;
            background-color: #fff;
            padding: 30px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            border: 1px solid #ccc;
        }

        .profile-form h2 {
            font-size: 20px;
            color: #1a1a1a;
            margin-bottom: 20px;
        }

        .form-group {
            display: flex;
            justify-content: space-between;
            margin-bottom: 20px;
        }

        .input-container {
            display: flex;
            flex-direction: column;
            width: 48%;
        }

        .input-container label {
            margin-bottom: 5px;
            font-size: 14px;
            color: #333;
        }

        .input-container input {
            padding: 10px;
            font-size: 14px;
            border: 1px solid #ccc;
            border-radius: 4px;
        }

        .form-actions {
            display: grid;
            justify-content: flex-end;
        }

        .btn-cancel {
            background-color: #f0f0f0;
            color: #333;
            padding: 10px 20px;
            border: 1px solid #ccc;
            border-radius: 4px;
            margin-right: 10px;
            cursor: pointer;
            text-align: center;
        }

        .btn-save {
            background-color: #6b46c1;
            color: #fff;
            margin-top: 10px;
            padding: 10px 20px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }

        .btn-cancel:hover, .btn-save:hover {
            opacity: 0.8;
        }

        .password-wrapper {
            position: relative;
        }

        .password-wrapper input {
            width: calc(100% - 30px);
        }

        .toggle-password {
            position: absolute;
            right: 10px;
            top: 50%;
            transform: translate(-150%, -50%);
            cursor: pointer;
        }

        .toggle-password i {
            font-size: 15px;
        }


    </style>
    
    <div class="profile-container">
        <div class="wrapper">
            <div class="p_sidebar">
                <div class="profile">
                    <div class="profile-img"> <img src="/images/dp.jpg" alt=""></div>
                    
                    <p class="profile-name">Hello, <span class="highlight"><%= user.firstname %></span></p>
                </div>
                <div class="nav-links">
                    <a href="/userprofile" class="nav-link active">
                        <i class="fa-solid fa-user"></i>
                        <span>My Profile</span>
                    </a>
                    <a href="/userorders" class="nav-link">
                        <i class="fas fa-shopping-bag"></i>
                        <span>My Orders</span>
                    </a>
                    <a href="/useraddress" class="nav-link">
                        <i class="fas fa-map-marker-alt"></i>
                        <span>My Address</span>
                    </a>
                    <a href="/userwishlist" class="nav-link">
                        <i class="fa-solid fa-heart"></i>
                        <span>Wish List</span>
                    </a>
                    <a href="/userwallet" class="nav-link">
                        <i class="fas fa-wallet"></i>
                        <span>Wallet</span>
                    </a>
                    <a href="/usercoupon" class="nav-link">
                        <i class="fa-solid fa-ticket"></i>
                        <span>Coupon</span>
                    </a>
                    <a href="/userlogout" class="nav-link">
                        <i class="fas fa-power-off"></i>
                        <span>Logout</span>
                    </a>
                </div>
            </div>

            <div class="main-content">
                <h1 class="page-title">Manage Profile</h1>
                <div class="profile-form">

                    <% if (errorMessage) { %>
                        <p style="color: red; font-weight: 700; font-size: 20px;"><%= errorMessage %></p>
                    <% } %>
                    
                  <h2>Update Your Password</h2>
                  <form action="/changepassword" method="POST">
                    <div class="form-group">
                      <div class="input-container">
                        <label for="currentPassword">Current Password</label>
                        <div class="password-wrapper">
                          <input type="password" id="currentPassword" name="currentPassword" required>
                          <span class="toggle-password" onclick="togglePassword('currentPassword')">
                            <i class="fa fa-eye" id="currentPasswordIcon"></i>
                          </span>
                        </div>
                      </div>
                    </div>
                    <div class="form-group">
                      <div class="input-container">
                        <label for="newPassword">New Password</label>
                        <div class="password-wrapper">
                          <input type="password" id="newPassword" name="newPassword" required>
                          <span class="toggle-password" onclick="togglePassword('newPassword')">
                            <i class="fa fa-eye" id="newPasswordIcon"></i>
                          </span>
                        </div>
                      </div>
                    </div>
                    <div class="form-group">
                      <div class="input-container">
                        <label for="confirmPassword">Confirm New Password</label>
                        <div class="password-wrapper">
                          <input type="password" id="confirmPassword" name="confirmPassword" required>
                          <span class="toggle-password" onclick="togglePassword('confirmPassword')">
                            <i class="fa fa-eye" id="confirmPasswordIcon"></i>
                          </span>
                        </div>
                      </div>
                    </div>
                    <div class="form-actions">
                      <a href="/updatecancel" class="btn-cancel">Cancel</a>
                      <button type="submit" class="btn-save">Save Changes</button>
                    </div>
                  </form>
                </div>
            </div>
        </div>
    </div>

    <script>

        function togglePassword(inputId) {
            const input = document.getElementById(inputId);
            const icon = document.getElementById(inputId + 'Icon');
            
            if (input.type === 'password') {
                input.type = 'text';
                icon.classList.remove('fa-eye');
                icon.classList.add('fa-eye-slash');
            } else {
                input.type = 'password';
                icon.classList.remove('fa-eye-slash');
                icon.classList.add('fa-eye');
            }
        }

    </script>

    <%- include('../partials/footer') %>
